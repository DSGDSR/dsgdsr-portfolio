{
  "name": "portfolio",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:fordevice": "ng serve --host 0.0.0.0",
    "test": "ng test",
    "test:prod": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "env-config": "ts-node -O '{\"module\": \"commonjs\"}' ./env.config.ts --env dev",
    "env-config:prod": "ts-node -O '{\"module\": \"commonjs\"}' ./env.config.ts --env prod",
    "build:browser": "ng build",
    "build:browser:prod": "npm run env-config:prod && ng build --configuration production --aot",
    "deploy": "env-cmd node deploy.js",
    "deploy:prod": "node deploy.js",
    "lint": "ng lint",
    "gzip": "rm -rf ./dist/*-gzip && gzipper c --verbose --output-file-format [filename].[ext] ./dist/portfolio ./dist/portfolio-gzip",
    "dev:ssr": "npm run env-config && ng run portfolio:serve-ssr --",
    "dev:ssr:mac": "NODE_OPTIONS=--openssl-legacy-provider npm run dev:ssr",
    "serve:ssr": "node dist/portfolio/server/main.js",
    "build:ssr": "npm run env-config:prod && ng build --configuration production && ng run portfolio:server:production",
    "prerender": "ng run portfolio:prerender",
    "vercel-build": "npm run build:ssr"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "16.2.0",
    "@angular/common": "16.2.0",
    "@angular/compiler": "16.2.0",
    "@angular/core": "16.2.0",
    "@angular/forms": "16.2.0",
    "@angular/platform-browser": "16.2.0",
    "@angular/platform-browser-dynamic": "16.2.0",
    "@angular/platform-server": "16.2.0",
    "@angular/router": "16.2.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@aptabase/web": "^0.2.0",
    "@nguniversal/express-engine": "16.2.0",
    "angular-feather": "6.5.0",
    "express": "^4.18.2",
    "localstorage-polyfill": "^1.0.1",
    "marked": "^4.3.0",
    "ngx-markdown": "16.0.0",
    "dracula-prism": "^2.1.5",
    "clipboard": "^2.0.11",
    "tslib": "^2.5.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~16.0.0",
    "@angular/cli": "16.2.0",
    "@angular/compiler-cli": "16.2.0",
    "@nguniversal/builders": "16.2.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~4.3.1",
    "@types/node": "^20.1.0",
    "codelyzer": "^6.0.2",
    "env-cmd": "^10.1.0",
    "gzipper": "^7.2.0",
    "jasmine-core": "~4.6.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "sftp-upload": "^1.0.4",
    "ts-node": "~10.9.1",
    "tslint": "~6.1.0",
    "typescript": "~5.0.4",
    "vercel": "^29.1.1",
    "dotenv": "^16.3.1",
    "yargs": "^17.7.2"
  }
}
